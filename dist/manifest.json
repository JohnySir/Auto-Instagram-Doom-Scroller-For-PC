{
  "manifest_version": 3,
  "name": "Autro Scroller",
  "version": "1.0.0",
  "description": "Automate your Instagram Reels viewing experience with intelligent auto-scrolling.",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["*://*.instagram.com/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/reels/*", "*://*.instagram.com/reels/videos/*"],
      "js": ["content/index.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
